{
  "name": "saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SaaS Monorepo with Turborepo, Next.js, Fastify, and Prisma",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.19.16",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@saas/ui": "^0.1.0",
    "motion": "^12.23.15"
  }
}
